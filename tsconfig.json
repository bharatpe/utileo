{
  "compilerOptions": {
    "outDir": "./lib/",
    "declarationDir": "lib",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "exclude": ["./example/**"],
  "include": [
    "src/**/*"
  ]
}
